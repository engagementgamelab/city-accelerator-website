{{> nav}}

<div class="o-box c-box c-box--blue-map">
	<div class="c-hero u-text-left">
		<div class="o-wrapper@msmall">
			<h1 class="c-hero__title u-text-serif">{{{title}}}</h1>
			<div class="c-hero__sub-title">{{{header}}}</div>
			<a href="#get-started-hash" class="c-btn c-btn--large c-btn--blue">Get Started</a>
		</div>
	</div>

	<div id="get-started-hash" class="c-card-list c-card-list--overlapped u-pad-top-large u-pad-bottom-large">
		<div class="o-wrapper@msmall o-wrapper--large@msmall" style="max-width:1200px;">  {{!--ADDED STYLE OVERRIDE.NEED TO MAKE NEW CLASS IN FUTURE--}} 
			<div class="c-card-list__item t-light-blue">
				{{> components/card
						reverse=true
						title="The Toolkit"
						text=theToolkit.html
						link-anchor = toolkitLink
						link-secondary = toolkitBrowseLink
						link-url = "/toolkit-builder"
						cover = "/images/cover-toolkit-blue.jpg"
				}}
			</div>
			<div class="c-card-list__item t-green">
				{{> components/card
						title="The Guide"
						text=theGuide.html
						link-anchor = guideLink
						link-url = "/guide"
						cover = "/images/cover-guide-green.jpg"
				}}
			</div>
			<div class="c-card-list__item t-neutral">
				{{> components/card
						reverse=true
						title="The Game"
						text=theGame.html
						link-anchor = gameLink
						link-url = "/game"
						cover = "/images/cover-game-neutral.jpg"
				}}
			</div>
			<div class="c-card-list__item t-purple">
				{{> components/card
						title="The Case Studies"
						text=theCaseStudies.html
						link-anchor = caseLink
						link-url = "/case-studies"
						cover = "/images/cover-case-studies-purple.jpg"
				}}
			</div>
		</div>
	</div>
</div>
	{{> footer contrast=false}}


</div> <!-- .container-fluid -->
