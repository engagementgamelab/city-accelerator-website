<div class="activity-card-wrapper col-sm-12">

	<div class="row">

		<div class="col-sm-4">
			{{> image this.thumbnail}}
		</div>

		<div class="col-sm-8">
			<h1>{{this.name}}</h1>
			<h3>{{{this.blurb.html}}}</h3>

		</div>

	</div>

	<div class="row">
		<a class="activity-open" data-id="activity_{{this.key}}">see more</a>
	</div>

</div>