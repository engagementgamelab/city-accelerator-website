            {{> 
              component-tool-card
                icon="http://placehold.it/50x50"
                title="Lorem Ipsum Super Long Title Blae"
                text="Lorem Ipsum Dolor Sit Amet"
                mini=true
            }}
          </div>
          <div class="s-tool__view__contents js-tool-view-contents">
            {{>
              component-tool-modal
                cover="http://placehold.it/500x500"
                title="Partnerships"
                current_phase="Getting Started"
                activity_length="20 minutes"
                description="Lorem Ipsum Dolor Sit Amet"
            }}
          </div>
        </div>



        <!-- Final Grid View -->
        <div class="s-tool__view js-tool-view js-tool-grid" data-step="2" data-sub-step="1">
          <div class="s-tool__grid__block js-tool-grid-block js-template">
            <div class="o-layout o-layout--center">
              <div class="o-layout__item o-layout__item--2/12@large">
                <h1 class="s-tool__grid__block__title js-tool-grid-block-title"></h1>
              </div>
              <div class="o-layout__item o-layout__item--10/12@large">
                <div class="o-layout js-tool-grid-item-container">
                  <div class="o-layout__item o-layout__item--6/12@medium o-layout__item--3/12@large js-template js-tool-grid-item"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <button class="s-tool__prev js-tool-back">Back</button>
    </div>
