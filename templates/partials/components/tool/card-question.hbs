{{!-- Set up both component and js-binding classes for each variant --}}
<div class="c-card js-tool-card s-tool__view__card c-card--full js-tool-question-card">

  <div class="c-card__cover">
    {{> map-vector}}
  </div>

  <div class="c-card__inner">

    {{!-- Only display an icon if we actually have specified one --}}
    {{#if icon}}
      <div class="c-card__icon c-icon">
        {{> cardImage icon}}
      </div>
    {{/if}}

    <div class="c-card__content">

      {{!-- (Chained If Blocks) Do NOT display the current step text if this is a mini-card
      variant or an intro card--}}

      <p class="c-card__current-card js-breadcrumb"></p>

      {{!-- If there's a specified title --}}
      {{#if title}}
        <p class="c-card__title js-tool-card-title">{{ title }}</p>
      {{/if}}

      {{!-- If there's text specified --}}
      {{#if question}}
        <div class="c-card__text">{{{ question.html }}}</div>
      {{/if}}

      {{!-- If there's helper text specified --}}
      {{#if example}}
        <div class="c-card__helper">{{{ example.html }}}</div>
      {{/if}}
    </div>

    {{!-- Card actions (buttons, etc) --}}
    <div class="c-card__actions">
      <button class="c-btn c-btn--secondary js-tool-no">No</button>
      <button class="c-btn c-btn--primary js-tool-yes">Yes</button>
    </div>
  </div>
</div>
