{{> nav}}

<div class="o-box c-box c-box--city">
	<div class="c-hero">
		<div class="o-wrapper">
			<h1 class="c-hero__title">{{{title}}}</h1>
			<p class="c-hero__sub-title">{{{header}}}</p>
			<a href="/toolkit" class="c-btn c-btn--large c-btn--blue">Get Started</a>
		</div>
	</div>
</div>

<div class="o-box c-box c-box--map u-pad-top-large u-pad-bottom-large">
	<div class="c-card-list c-card-list--overlapped">
		<div class="o-wrapper o-wrapper--large">
			<div class="c-card-list__item t-light-blue">
				{{> components/card
						reverse=true
						title="The Toolkit"
						text=theToolkit.html
						link-anchor = toolkitLink
						link-secondary = toolkitBrowseLink
						link-url = "/toolkit"
						link-urlSecondary = "/toolkit-builder#step=grid"
				}}
			</div>
			<div class="c-card-list__item t-green">
				{{> components/card
						title="The Guide"
						text=theGuide.html
						link-anchor = guideLink
						link-url = "/guide"
				}}
			</div>
			<div class="c-card-list__item t-neutral">
				{{> components/card
						reverse=true
						title="The Game"
						text=theGame.html
						link-anchor = gameLink
						link-url = "/game"
				}}
			</div>
			<div class="c-card-list__item t-purple">
				{{> components/card
						title="The Case Studies"
						text=theCaseStudies.html
						link-anchor = caseLink
						link-url = "/case-studies"
				}}
			</div>
		</div>
	</div>
</div>

{{> footer}}

</div> <!-- .container-fluid -->
