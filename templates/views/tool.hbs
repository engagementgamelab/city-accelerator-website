      <div class="o-wrapper">

        <div class="s-tool__view js-tool-view is-active" data-step="1" data-sub-step="1" data-theme="t-blue">
          {{>
            component-tool-card
              cover="http://placehold.it/500x500"
              icon="http://placehold.it/50x50"
              title="Lorem Ipsum Dolor Sit Amet"
              text="<p>One paragraph supported</p><p>not anymore</p>"
              helper="I am a card helper"
              yesno=false
              mini=false
          }}
