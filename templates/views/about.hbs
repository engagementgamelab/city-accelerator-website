<article class="c-article t-light-blue">

  {{> nav contrast="true"}}

  <div class="c-article__header">
    <h1 class="c-article__title">{{pageTitle}}</h1>
  </div>

  {{!-- need style --}}
  <div class="c-article__main">
    <div class="c-article__content">
        <p class="c-article__intro">{{pageHeader}}</p>
    </div>
  </div>

  <div class="c-article__main">
    <div class="c-article__content">
        <p class="c-article__intro">{{{description.html}}}</p>
    </div>
    <div class="c-article__content c-article__content--full">
      <div class="s-gallery">
        <img src="http://placehold.it/500x500" alt="Alt">
        <img src="http://placehold.it/500x500" alt="Alt">
      </div>
    </div>

    {{!-- IMAGES --}}
    {{#each images}}

    	<img src="{{secure_url}}" height="{{height}}" width="{{width}}" />

    {{/each}}

    {{!-- PROGRAM GOALS --}}
		<div class="c-article__content c-article__content--medium">
			<div class="o-layout">
				<div class="o-layout__item o-layout__item--3/12@medium">
					<h2 class="u-text-zeta u-text-uppercase u-text-bold u-text-sans">Program Goals</h2>
				</div>
				<div class="o-layout__item o-layout__item--9/12@medium">
					<p>{{{programGoals.html}}}</p>
				</div>
			</div>
		</div>

    {{!-- READ MORE --}}
		<div class="c-article__content c-article__content--medium">
			<div class="o-layout">
				<div class="o-layout__item o-layout__item--3/12@medium">
					<h2 class="u-text-zeta u-text-uppercase u-text-bold u-text-sans">Read More About The Cohort</h2>
				</div>
				<div class="o-layout__item o-layout__item--9/12@medium">
					<p>{{{cohort.html}}}</p>
				</div>
			</div>

    {{!-- PUBLIC ENGAGEMENT ARTICLES --}}
		<div class="c-article__content c-article__content--medium">
			<div class="o-layout">
				<div class="o-layout__item o-layout__item--3/12@medium">
					<h2 class="u-text-zeta u-text-uppercase u-text-bold u-text-sans">Articles About the Public Engagement Today</h2>
				</div>
				<div class="o-layout__item o-layout__item--9/12@medium">
					<p>{{{public.html}}}</p>
				</div>
			</div>
		</div>
  </div>

</article>

{{> footer}}